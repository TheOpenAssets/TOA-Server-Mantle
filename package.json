{
  "name": "mantle-rwa-platform",
  "private": true,
  "packageManager": "yarn@1.22.22",
  "type": "module",
  "engines": {
    "node": "20.x"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "yarn workspaces foreach -A -pt run dev",
    "build": "yarn workspaces foreach -A -pt run build",
    "lint": "eslint .",
    "type-check": "tsc --noEmit",
    "generate:types": "yarn workspace @mantle/contracts generate:types",
    "sync-env": "cp .env packages/backend/.env && cp .env packages/contracts/.env"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/jest": "^30.0.0",
    "@types/multer": "^2.0.0",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.50.0",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.0"
  },
  "dependencies": {
    "@types/node": "^25.0.3",
    "dotenv": "^16.4.5"
  }
}
